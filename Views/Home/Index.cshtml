@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <!-- The header -->
        <div class="header">
            <img class="image-banner" src="~/images/flag_banner.jpg">
        </div>
        <!-- The navigation bar -->
        <div class="nav-bar">
            <ul>
                <li>HOME</li>
                <li>TICKETS</li>
                <li>ABOUT</li>
                <li>CONTACT</li>
            </ul>
        </div>
        <!-- The main content -->
        <div class="main-content">
            <!-- Column one -->
            <div class="column-1">
                <table class="team-schedule table table-bordered table-striped" id="team-schedule">
                    <h3>Regular Season Schedule</h3>
                    <thead>
                        <tr>
                            <th>WK</th>
                            <th>DATE</th>
                            <th>OPPONENT</th>
                            <th>TIME</th>
                            <th>TV</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Regular season schedule is read from the database -->
                        @foreach (var schedule in Model)
                        {
                            <tr>
                                <td>@schedule.WeekId</td>
                                <td>@schedule.Date</td>
                                <td>
                                    @schedule.Vs
                                    <img class="team-logo" src="/images/team_logos/@schedule.TeamLogo">
                                    @schedule.Opponent
                                </td>
                                <td>@schedule.Time</td>
                                <td>@schedule.Tv</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Column two -->
            <div class="column-2">
                <h3>Player Stat Sheet</h3>
                <!-- Player stat sheet card-->
                <div class="card mb-3 container-fluid" style="max-width:700px;">
                    <div class="row">
                        <div class="col-md-5">
                            <!-- Player image is loaded here -->
                            <div class="player-img"></div>
                        </div>
                        <div class="col-md-7">
                            <div class="row-md-4">
                                <!-- Player name, number and position are loaded here-->
                                <div class="stats1"></div>
                            </div>
                            <div class="row-md-8">
                                <!-- Players stat table is loaded here with JavaScript -->
                                <div class="stats2" id="stats2"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Player thumbnail selector -->
                <div class="fs-6">Change Player</div>
                <div class="row" id="thumbnail-selector">
                    <div class="col-sm-2">
                        <div class="btn-group">
                            <button class="btn dropdown-toggle" type="button" id="dropdownMenuClickableInside" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                                Positions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuClickable">
                                <li><a class="dropdown-item" href="#" onclick="togglePlayerThumbnails(quarterbacksArray)">Quarterbacks</a></li>
                                <li><a class="dropdown-item" href="#" onclick="togglePlayerThumbnails(runningBacksArray)">Running Backs</a></li>
                                <li><a class="dropdown-item" href="#" onclick="togglePlayerThumbnails(wideReceiversArray)">Wide Receivers</a></li>
                                <li><a class="dropdown-item" href="#" onclick="togglePlayerThumbnails(tightEndsArray)">Tight Ends</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <div class="player-thumbnails">
                            <!-- Player thumbnails will be loaded here with JavaScript -->
                            <div class="row row-cols-auto justify-content-start" id="player-thumbnails">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Image carousel -->
                <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel">
                    <div class="fs-3">Touchdown Passes of 2020</div>
                    <div class="carousel-indicators">
                        <!-- Specific image buttons -->
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="6" aria-label="Slide 7"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="7" aria-label="Slide 8"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="8" aria-label="Slide 9"></button>
                    </div>
                    <!-- The carousel images -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/slides/img1.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img2.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img3.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img4.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img5.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img6.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img7.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img8.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/slides/img9.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <!-- The previous and next buttons for the image carousel-->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- The footer -->
        <div class="footer">
            
            <a href="https://twitter.com/Seahawks" target="_blank">
                <img class="socialMediaIcon" src="~/images/twitter.png" /> Twitter  </a>
            
            <a href="https://www.instagram.com/seahawks/" target="_blank">
                <img class="socialMediaIcon" src="~/images/instagram.png" /> Instagram</a>
            
            <a href="https://www.facebook.com/Seahawks" target="_blank">
                <img class="facebookIcon" src="~/images/facebook.png" />Facebook</a>
            
            <div>
                <img class="copyright-icon" src="~/images/copyright.png" /> 
                2021 Jesus Ynfante
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/site.js" type="text/javascript"></script>
    <script src="https://www.w3schools.com/lib/w3.js" style="color:white"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>